@page
@model HotelBusiness.Pages.Account.LoginModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Đăng Nhập";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg p-4 animated fadeIn" style="width: 400px; border-radius: 12px;">
        <h3 class="text-center text-primary fw-bold">Đăng Nhập</h3>
        <hr />

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="mb-1">@error.ErrorMessage</p>
                }
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Email hoặc Tên đăng nhập</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                    <input asp-for="Input.EmailOrUsername" class="form-control" placeholder="Nhập email hoặc username" />
                </div>
                <span asp-validation-for="Input.EmailOrUsername" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 fw-semibold" style="border-radius: 8px; transition: 0.3s;">
                <i class="fas fa-sign-in-alt"></i> Đăng nhập
            </button>

            <div class="mt-3 text-center">
                <a href="/account/register" class="text-decoration-none">Chưa có tài khoản? <b>Đăng ký ngay</b></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
